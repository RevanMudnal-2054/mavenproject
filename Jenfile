pipeline {
    agent any 
    stages {
        stage('clone repo') { 
            steps {
                sh "rm -rf mavenproject"
                sh "git clone https://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@github.com/devopstraining611-282/mavenproject.git"
                sh "mvn clean -f mavenproject"
            }
        }
        stage('Compile') { 
            steps {
                sh "mvn compile -f mavenproject"
            }
        }
        stage('Test') { 
            steps {
                sh "mvn test -f mavenproject"
            }
        }
        stage('package') { 
            steps {
                sh "mvn package -f mavenproject"
            }
        }
        stage('install') { 
            steps {
                sh "mvn install -f mavenproject"
            }
        }
        stage('deploy') { 
            steps {
                sh "cp /root/.m2/repository/DevOps/TestProject/1.0/TestProject-1.0.war /var/lib/tomcat9/webapps"
            }
        }
    }
}
